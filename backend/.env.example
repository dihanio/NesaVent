# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/nesavent

# Redis Configuration (for caching and rate limiting)
# Option 1: Use individual config (recommended, works with Redis Cloud)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=nesavent:

# Option 2: Use Redis URL (alternative)
# REDIS_URL=redis://default:your_password@your-redis-host:port

# For Redis Cloud example:
# REDIS_HOST=redis-xxxxx.c295.ap-southeast-1-1.ec2.cloud.redislabs.com
# REDIS_PORT=13932
# REDIS_USERNAME=default
# REDIS_PASSWORD=your_password_here

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=24h

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# Email Configuration (Mailpit for dev, SMTP for production)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@nesavent.com

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# API Documentation (optional)
API_DOCS_URL=

# Cron Jobs
ENABLE_CRON_JOBS=true
ORDER_EXPIRY_CHECK_INTERVAL=*/5 * * * *